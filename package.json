{
  "name": "@lostintime/main-ts",
  "version": "0.1.1",
  "private": false,
  "description": "Bind node process signals to cancel application task",
  "author": "lostintime.dev@gmail.com",
  "license": "Apache-2.0",
  "homepage": "https://github.com/lostintime/main-ts",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "repository": {
    "type": "git",
    "url": "git+ssh://github.com:lostintime/main-ts.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "clean": "rimraf lib && rimraf coverage && rimraf .nyc_output",
    "test": "mocha --opts mocha.opts",
    "test:watch": "mocha --opts mocha.opts --watch",
    "test:prod": "npm run lint && nyc mocha --opts mocha.opts --reporter dot",
    "prebuild": "npm run clean",
    "build": "tsc",
    "build:watch": "tsc -w"
  },
  "keywords": [
    "typescript",
    "tslint",
    "mocha"
  ],
  "dependencies": {
    "funfix-exec": "^7.0.1",
    "funfix-effect": "^7.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/mocha": "^5.2.5",
    "@types/node": "^8.10.24",
    "@lostintime/devcon-ts": "^0.1.6",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.1.3"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "json",
      "text",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
